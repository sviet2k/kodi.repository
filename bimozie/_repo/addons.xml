<?xml version="1.0" encoding="UTF-8"?>
<addons>

	<addon id="plugin.video.bimozie" name="BimoZie" version="0.3.0" provider-name="billy.nguyen">
        <requires>
            <import addon="xbmc.python" version="2.25.0"/>
            <import addon="script.module.beautifulsoup4" version="4.3.1"/>
            <import addon="script.module.pycryptodome" version="3.4.1" optional="true"/>
            <import addon="script.module.resolveurl" version="5.0.24"/>
            <import addon="script.module.requests" version="2.7.0"/>
        </requires>
        <extension point="xbmc.python.pluginsource" library="default.py">
            <provides>video</provides>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>Bimozie addon</summary>
            <description>This plugin allows you to watch movies from several vietnamese websites likes bilutv
                phimmedia...
            </description>
            <disclaimer>The provider is not responsible for any issues caused by using this addon.
            </disclaimer>
            <platform>all</platform>
            <email>billythekidsde@gmail.com</email>
            <source>https://github.com/billythekids/plugin.video.bimozie</source>
        </extension>
	</addon>
	
	
    <addon id="repository.bimozie" name="Bimozie Sviet" version="1.1" provider-name="Toto">
        <requires>
            <import addon="xbmc.addon" version="12.0.0"/>
        </requires>
        <extension point="xbmc.addon.repository" name="Bimozie Sviet">
            <info compressed="false">https://raw.githubusercontent.com/sviet2k/kodi.repository/master/bimozie/_repo/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/sviet2k/kodi.repository/master/bimozie/_repo/addons.xml.md5</checksum>
            <datadir zip="true">http://github.com/sviet2k/kodi.repository/raw/master/bimozie/_repo/</datadir>
            <hashes>false</hashes>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>A short summary of this repository</summary>
            <description>The description can be longer. Using [CR] you can create a newline. The use of other markup is not advised.</description>
            <platform>all</platform>
		</extension>
	</addon>
</addons>
